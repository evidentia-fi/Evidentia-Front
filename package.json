{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter app",
    "dev:mint": "turbo dev --filter mint",
    "dev:prod": "turbo dev:prod",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "pnpm --filter ui dlx shadcn@latest add"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "viem": "2.30.5",
      "wagmi": "2.15.3",
      "@wagmi/core": "2.17.2",
      "@reown/appkit": "1.7.7",
      "@reown/appkit-adapter-wagmi": "1.7.7"
    }
  },
  "dependencies": {
    "@reown/appkit": "^1.7.3"
  }
}
